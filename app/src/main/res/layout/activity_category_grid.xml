<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_category_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dontknow.finhacks.com.shoppersproject.CategoryGrid">

    <!-- Clothing  -->
    <ImageButton
        app:srcCompat="@drawable/ic_menu_send"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:id="@+id/clothingButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <!-- Electronics -->
    <ImageButton
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/electronicsButton"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/clothingButton"
        android:layout_alignLeft="@+id/gamesButton"
        android:layout_alignStart="@+id/gamesButton" />

    <!--Games -->
    <ImageButton
        android:layout_width="150dp"
        app:srcCompat="@drawable/ic_menu_manage"
        android:id="@+id/gamesButton"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/restaurantButton"
        android:layout_toRightOf="@+id/homeButton"
        android:layout_toEndOf="@+id/homeButton"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <!-- Restaurants -->
    <ImageButton
        app:srcCompat="@android:drawable/arrow_up_float"
        android:layout_marginTop="13dp"
        android:id="@+id/restaurantButton"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:layout_below="@+id/clothingButton"
        android:layout_alignLeft="@+id/clothingButton"
        android:layout_alignStart="@+id/clothingButton" />

    <!-- Cosmetics -->
    <ImageButton
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_menu_camera"
        android:id="@+id/cosmesticsButton"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/homeButton"
        android:layout_alignLeft="@+id/gamesButton"
        android:layout_alignStart="@+id/gamesButton" />

    <!-- Home -->
    <ImageButton
        android:layout_width="150dp"
        app:srcCompat="@android:drawable/btn_star"
        android:id="@+id/homeButton"
        android:layout_height="150dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/restaurantButton"
        android:layout_alignLeft="@+id/restaurantButton"
        android:layout_alignStart="@+id/restaurantButton" />

    <Button
        android:text="Done"
        android:id="@+id/submitCategory"
        android:layout_width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:layout_height="70dp" />
</RelativeLayout>
